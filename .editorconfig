# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md,*.md.eco]
trim_trailing_whitespace = false

[{package.json,bower.json,.bowerrc}]
indent_style = space
indent_size = 2

[{docpad.coffee,Gruntfile.coffee}]
indent_style = tab
indent_size = 4
